<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bootstrap Basic</title>
  <!-- Bootstrap CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  <!-- Bootstrap Icons CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <style>
    .sidebar-fixed {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      width: 250px;
      z-index: 1030;
      overflow-y: auto;
      background: var(--bs-body-bg);
      border-right: 1px solid var(--bs-border-color-translucent);
    }

    .main-content {
      margin-left: 250px;
      min-height: 100vh;
      padding: 0 1.5rem 1.5rem 1.5rem;
    }

    @media (max-width: 991.98px) {
      .sidebar-fixed {
        position: static;
        width: 100%;
        height: auto;
        border-right: none;
      }

      .main-content {
        margin-left: 0;
      }
    }
  </style>
    <style>
    .sidebar-fixed {
      background: var(--bs-body-bg, #f8f9fa);
      color: var(--bs-body-color, #212529);
    }
    .avatar-svg svg {
      color: var(--bs-body-color, #212529) !important;
      background: transparent;
      transition: color 0.2s;
    }
    @media (prefers-color-scheme: dark) {
      .sidebar-fixed {
        background: #222;
        color: #f0f0f0;
      }
      .avatar-svg svg {
        color: #f0f0f0;
      }
    }
  </style>
</head>

<body>
  <div class="d-flex">
    <%- include('sidebar.ejs') %>
      <div class="flex-grow-1">
        <script>
          (function () {
            try {
              var theme = localStorage.getItem('theme');
              var useDark = false;
              if (theme === 'dark') useDark = true;
              else if (theme === 'auto') useDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
              else if (!theme) useDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
              if (useDark) {
                document.documentElement.setAttribute('data-bs-theme', 'dark');
                document.body && document.body.classList.add('bg-dark');
              } else {
                document.documentElement.setAttribute('data-bs-theme', 'light');
                document.body && document.body.classList.add('bg-light');
              }
            } catch (e) { }
          })();
        </script>